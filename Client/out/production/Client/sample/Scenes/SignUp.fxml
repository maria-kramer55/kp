<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" style="-fx-background-color: #00ffb3; -fx-border-width: 2; -fx-border-color: #000000;" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controllers.SignUP_Controller">
    <children>
        <Label layoutX="295.0" layoutY="45.0" text="Регистрация">
            <font>
                <Font name="YesevaOne" size="46.0" />
            </font>
        </Label>
        <Button fx:id="signUpButton" layoutX="326.0" layoutY="414.0" mnemonicParsing="false" onAction="#signUp" prefHeight="44.0" prefWidth="250.0" style="-fx-background-color: #00ccff;" text="Зарегестрироваться">
            <font>
                <Font name="YesevaOne" size="20.0" />
            </font>
        </Button>
        <TextField fx:id="signUpLogin" layoutX="301.0" layoutY="220.0" prefHeight="30.0" prefWidth="300.0" promptText="Логин" style="-fx-background-color: #ffffff;" />
        <PasswordField fx:id="signUpPassword" layoutX="301.0" layoutY="270.0" prefHeight="30.0" prefWidth="300.0" promptText="Пароль" style="-fx-background-color: #ffffff;" />
      <TextField fx:id="signUpName" layoutX="300.0" layoutY="127.0" prefHeight="30.0" prefWidth="300.0" promptText="Имя" style="-fx-background-color: #ffffff;" />
      <TextField fx:id="signUpLastName" layoutX="300.0" layoutY="173.0" prefHeight="30.0" prefWidth="300.0" promptText="Фамилия" style="-fx-background-color: #ffffff;" />
      <CheckBox fx:id="signUpCheckBoxMale" layoutX="301.0" layoutY="330.0" mnemonicParsing="false" selected="true" text="Мужчина">
         <font>
            <Font name="YesevaOne" size="19.0" />
         </font>
      </CheckBox>
      <CheckBox fx:id="signUpCheckBoxFemale" layoutX="469.0" layoutY="330.0" mnemonicParsing="false" text="Женщина">
         <font>
            <Font name="YesevaOne" size="19.0" />
         </font>
      </CheckBox>
    </children>

</AnchorPane>
